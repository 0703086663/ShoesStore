</div>

<script>
    document.addEventListener("DOMContentLoaded", function (){
        if( '{{requireLogin}}') {
            alert("{{requireLogin}}");
        }
    })

    //Check condition for username input
    var usernameInput = document.getElementById("username")
    var usernameNofi = document.getElementById("username-noti")
    var usernameSuccessIcon = document.getElementById("username-success-icon")
    var usernameFailIcon = document.getElementById("username-fail-icon")
    function usernameCheck(){
        var usernameValue = usernameInput.value;
        
        if ( usernameValue.length <= 0 ){
            usernameNofi.innerHTML = "Please fill this field with your username"
            usernameInput.setAttribute('style','border:1px solid red;padding:0 30px')
            usernameSuccessIcon.setAttribute('hidden','hidden')
            usernameFailIcon.removeAttribute('hidden')
        }
        else if ( !usernameValue.match(/^[A-Za-z0-9_.@]+$/)){
            usernameNofi.innerHTML = "Please not fill this field with special dorms"
            usernameInput.setAttribute('style','border:1px solid red;padding:0 30px')
            usernameSuccessIcon.setAttribute('hidden','hidden')
            usernameFailIcon.removeAttribute('hidden')
        }
        else if ( usernameValue.length <5 ){
            usernameNofi.innerHTML = "Username needs at least 5 characters"
            usernameInput.setAttribute('style','border:1px solid red;padding:0 30px')
            usernameSuccessIcon.setAttribute('hidden','hidden')
            usernameFailIcon.removeAttribute('hidden')
        }
        else {
            usernameNofi.innerHTML = ""
            usernameInput.setAttribute('style','border:2px solid green;padding:0 30px')
            usernameFailIcon.setAttribute('hidden','hidden')
            usernameSuccessIcon.removeAttribute('hidden')
        }
    }

    //Check condition for password input
    var passwordInput = document.getElementById("password")
    var passwordNofi = document.getElementById("password-noti")
    var passwordSuccessIcon = document.getElementById("password-success-icon")
    var passwordFailIcon = document.getElementById("password-fail-icon")
    function passwordCheck(){
        var passwordValue = passwordInput.value;
        
        if ( passwordValue.length <= 0 ){
            passwordNofi.innerHTML = "Please fill this field with your password"
            passwordInput.setAttribute('style','border:1px solid red;padding:0 30px')
            passwordSuccessIcon.setAttribute('hidden','hidden')
            passwordFailIcon.removeAttribute('hidden')
        }
        else if ( !passwordValue.match(/^[A-Za-z0-9_.@]+$/)){
            passwordNofi.innerHTML = "Please not fill this field with special dorms"
            passwordInput.setAttribute('style','border:1px solid red;padding:0 30px')
            passwordSuccessIcon.setAttribute('hidden','hidden')
            passwordFailIcon.removeAttribute('hidden')
        }
        else if ( passwordValue.length <5 ){
            passwordNofi.innerHTML = "Password needs at least 5 characters"
            passwordInput.setAttribute('style','border:1px solid red;padding:0 30px')
            passwordSuccessIcon.setAttribute('hidden','hidden')
            passwordFailIcon.removeAttribute('hidden')
        }
        else {
            passwordNofi.innerHTML = ""
            passwordInput.setAttribute('style','border:2px solid green;padding:0 30px')
            passwordFailIcon.setAttribute('hidden','hidden')
            passwordSuccessIcon.removeAttribute('hidden')
            
            //After checking for all 
            var loginBtn = document.getElementById('login-btn')
            loginBtn.setAttribute('type','submit')
        }
    }
    

</script>