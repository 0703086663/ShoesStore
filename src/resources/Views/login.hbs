<div class="sign-in-page">
        
    <form class="sign-in" method="post" action="/validation" name="loginform">
        <h3>Login Here</h3>
        <label for="username">Username</label>
        <div class="username-icon">
            <i class="fa fa-check login-success-icon" id="username-success-icon" hidden></i>
            <i class="fa fa-exclamation-triangle login-fail-icon" id="username-fail-icon" hidden></i>
            <input type="text" placeholder="Username" onkeyup="usernameCheck()"
                id="username" name="username">
        </div>
        <p class="notification-all" id="username-noti" display="none"></p>

        <label for="password">Password</label>
        <div class="password-icon">
            <i class="fa fa-check login-success-icon" id="password-success-icon" hidden></i>
            <i class="fa fa-exclamation-triangle login-fail-icon" id="password-fail-icon" hidden></i>
            <input type="password" placeholder="Password" onkeyup="passwordCheck()"
                id="password"  name="password" required>
        </div>
        <p class="notification-all" id="password-noti" display="none"></p>

