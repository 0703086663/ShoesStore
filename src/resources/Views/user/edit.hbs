<div class="container">
		<div class="user-detail-body">
            <h1 class="text-center">Edit Profile</h1>
			<div class="row">
				<div class="col-lg-4">
					<div class="card user-card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
								<img src="{{user.avatar}}" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
								<div class="mt-3">
									<h4>{{user.name}}</h4>
									<p class="text-secondary mb-1">{{user.workplace}}</p>
									<p class="text-muted font-size-sm">{{user.address}}</p>
									<button class="btn btn-primary">Follow</button>
									<button class="btn btn-outline-primary">Message</button>
								</div>
							</div>
							<hr class="my-4">
							<ul class="list-group list-group-flush">
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fa fa-globe"></i> Website</h6>
									<span class="text-secondary">https://website.com</span>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fab fa-github"></i> Github</h6>
									<span class="text-secondary">{{user.username}}</span>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fab fa-twitter"></i> Twitter</h6>
									<span class="text-secondary">@{{user.username}}</span>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fab fa-instagram"></i> Instagram</h6>
									<span class="text-secondary">{{user.username}}</span>
								</li>
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
									<h6 class="mb-0"><i class="icon-user fab fa-facebook"></i> Facebook</h6>
									<span class="text-secondary">{{user.username}}</span>
								</li>
							</ul>
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="card user-card">
						<form action="/user/{{user._id}}?_method=PUT" method="post">
							<div class="card-body">
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Full Name</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input type="text" class="form-control" name="name" value="{{user.name}}">
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Username</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input type="text" class="form-control" name = "username" value="{{user.username}}">
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Email</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input type="text" class="form-control" name="email" value="{{user.email}}">
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Role</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<select name="role" id="role-choose" class="form-control" disabled>
											<option disabled>-- Select role --</option>
											<option disabled>____________</option>
											<option selected value="Staff">Staff</option>
											<option value="QAC">QAC</option>
											<option value="Admin">Admin</option>
										</select>
										{{!-- <input type="text" class="form-control" id="role-choose" name="role" value="{{user.role}}" disabled> --}}
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Avatar</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input type="text" class="form-control" name="avatar" value="{{user.avatar}}">
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Work time</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input type="text" class="form-control" name="worktime" value="{{user.worktime}}">
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Work place</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input type="text" class="form-control" name="workplace" value="{{user.workplace}}">
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Phone</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input type="text" class="form-control" name="phone" value="{{user.phone}}">
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Address</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input type="text" class="form-control" name="address" value="{{user.address}}">
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Birthday</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input type="text" class="form-control" name="birth" value="{{user.birth}}">
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Gender</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input type="text" class="form-control" name="gender" value="{{user.gender}}">
									</div>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Created at</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input type="text" class="form-control" value="{{moment user.createdAt format="HH:mm on DD-MM-YYYY"}}" disabled>
									</div>
								</div>
								<div class="row">
									<div class="col-sm-3"></div>
									<div class="col-sm-4 text-secondary">
										<a href="/user/{{user._id}}/changepassword">
											<button type="button" class="btn btn-secondary px-3 save-btn">Change Password</button>
										</a>
									</div>
									<div class="col-sm-5 text-secondary">
										<button type="submit" class="btn btn-secondary px-3 save-btn">Save Profile</button>
									</div>
								</div>
							</div>
						</form>
          		</div>
        	</div>
        </div>
      </div>
    </div>
  </div>

<script>
	document.addEventListener("DOMContentLoaded", function () {
		var roleChoose = $('#role-choose')
		if ( '{{userLogin.role}}' == 'Admin'){
			roleChoose.prop("disabled", false);
		}
	})
</script>